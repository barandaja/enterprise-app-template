# Monitoring Stack Configuration
# Copy this file to .env and fill in your actual values

# Auth Service Configuration
AUTH_SERVICE_HOST=localhost
AUTH_SERVICE_PORT=8000
AUTH_SERVICE_EXTERNAL_URL=https://auth.yourdomain.com
AUTH_SERVICE_DOMAIN=auth.yourdomain.com

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_MONITORING_URL=postgresql://monitor_user:monitor_pass@localhost:5432/authdb?sslmode=disable

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_HOST=localhost
REDIS_PORT=6379

# Environment and Region
ENVIRONMENT=production
REGION=us-east-1

# Email Configuration for Alerts
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_FROM_EMAIL=alerts@yourdomain.com
SMTP_USER=alerts@yourdomain.com
SMTP_PASSWORD=your_smtp_password

# Alert Recipients
DEFAULT_EMAIL=devops@yourdomain.com
ONCALL_EMAIL=oncall@yourdomain.com
SECURITY_TEAM_EMAIL=security@yourdomain.com
COMPLIANCE_TEAM_EMAIL=compliance@yourdomain.com
TEAM_EMAIL=team@yourdomain.com
DATABASE_TEAM_EMAIL=dba@yourdomain.com
PERFORMANCE_TEAM_EMAIL=performance@yourdomain.com

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
CRITICAL_SLACK_CHANNEL=#alerts-critical
SECURITY_SLACK_CHANNEL=#security-alerts
WARNING_SLACK_CHANNEL=#alerts-warning

# PagerDuty Integration
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_integration_key

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password
GRAFANA_ROOT_URL=https://grafana.yourdomain.com
GRAFANA_BASE_URL=https://grafana.yourdomain.com

# Prometheus Configuration
PROMETHEUS_BASE_URL=https://prometheus.yourdomain.com
PROMETHEUS_REMOTE_WRITE_URL=https://your-remote-storage/api/v1/write
PROMETHEUS_REMOTE_WRITE_ENABLED=false

# AlertManager Configuration
ALERTMANAGER_BASE_URL=https://alertmanager.yourdomain.com

# Optional: External Key Management
# KMS_ENDPOINT=https://your-kms-service.com
# VAULT_ADDR=https://your-vault-instance.com
# HSM_ENDPOINT=https://your-hsm-service.com

# Optional: Threat Intelligence
# ABUSEIPDB_API_KEY=your_abuseipdb_api_key
# VIRUSTOTAL_API_KEY=your_virustotal_api_key

# Optional: Log Aggregation
# ELASTICSEARCH_URL=https://your-elasticsearch.com
# LOKI_URL=http://loki:3100

# Optional: Distributed Tracing
# JAEGER_ENDPOINT=http://jaeger:14268/api/traces
# ZIPKIN_ENDPOINT=http://zipkin:9411/api/v2/spans

# SSL/TLS Configuration
# SSL_CERT_PATH=/etc/ssl/certs/auth-service.crt
# SSL_KEY_PATH=/etc/ssl/private/auth-service.key
# CA_CERT_PATH=/etc/ssl/certs/ca.crt