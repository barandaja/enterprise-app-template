# Frontend Environment Variables
# Copy this file to .env.local and fill in the values

# API Configuration (REQUIRED)
VITE_API_URL=http://localhost:8000/api/v1
VITE_WS_URL=ws://localhost:8000/ws

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_DEBUG_MODE=false

# Security
VITE_CSP_REPORT_URI=/api/csp-report

# Authentication
VITE_SESSION_TIMEOUT=1800000 # 30 minutes in milliseconds
VITE_TOKEN_REFRESH_BUFFER=300000 # 5 minutes in milliseconds

# File Upload
VITE_MAX_FILE_SIZE=10485760 # 10MB in bytes
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=900000 # 15 minutes in milliseconds

# Note: In production, ensure VITE_API_URL uses HTTPS
# Example: VITE_API_URL=https://api.yourdomain.com/api/v1